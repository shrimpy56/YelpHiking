<% include ../partials/header %>

<div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To YelpHiking</h1>
             <p>View our hand-picked hiking locations from all over the world!</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/grounds/new">Add New Ground</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% grounds.forEach(function(ground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= ground.image %>">
                   <div class="caption">
                       <h4><%= ground.name %></h4>
                   </div>
                   <p>
                       <a href="/grounds/<%= ground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>